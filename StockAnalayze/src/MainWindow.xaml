        <CheckBox x:Name="high" Content="High" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="338,156,0,0" FontSize="16" IsChecked="True"/>
        <CheckBox x:Name="low" Content="Low" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="409,156,0,0" FontSize="16" IsChecked="True"/>
        <CheckBox x:Name="close" Content="Close" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="476,156,0,0" FontSize="16" IsChecked="True"/>
    </Grid>
</Window>
