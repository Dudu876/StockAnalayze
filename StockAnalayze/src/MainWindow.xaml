        <Label Margin="64,95,371.612,224" FontSize="20" Content="Analyze" Padding="0"/>
        <TextBox x:Name="daysAgo" HorizontalAlignment="Left" Height="34" Margin="139,0,0,222" TextWrapping="Wrap" Text="20" VerticalAlignment="Bottom" Width="69" TabIndex="2" FontWeight="Medium" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20"/>
        <Label Margin="213,95,97.612,224" FontSize="20" Content="days from today backwards" Padding="0"/>
