<UserControl x:Class="StockAnalayze.StockChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Controls="clr-namespace:Schementi.Controls;assembly=Schementi.Controls.Sparkline" 
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="300" Loaded="ViewLoaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="stockName" 
                       TextAlignment="Center" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"/>
        <Border Background="black" BorderThickness="1">
            <Controls:LineChart Margin="0 1" ToolTip="stockChart">
                <Controls:Sparkline  Foreground="#FFCCCC66" x:Name="closeGraph" />
                <Controls:Sparkline Foreground="#FFFF00FF" x:Name="openGraph" />
                <Controls:Sparkline Foreground="#FFCCCC66" x:Name="highGraph" />
                <Controls:Sparkline Foreground="green" x:Name="lowGraph" />
            </Controls:LineChart>
        </Border>
    </Grid>
</UserControl>